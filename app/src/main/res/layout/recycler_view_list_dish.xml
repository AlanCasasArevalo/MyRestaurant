<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_dish_card_view"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="#E2E2E2"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/aceituna"
            android:adjustViewBounds="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:id="@+id/dish_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dish_image"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/dish_image">

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="Cerdo asado con jamon"
                android:gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/dish_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="60â‚¬"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="25dp"
                />

        </LinearLayout>

        <GridView
            android:id="@+id/allergens_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="30dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:numColumns="auto_fit"
            android:layout_margin="5dp"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:layout_below="@+id/dish_information"
            android:layout_toEndOf="@+id/dish_image"
            android:layout_toRightOf="@+id/dish_image">

        </GridView>


    </RelativeLayout>
</android.support.v7.widget.CardView>

